# === SELF-HOSTING MODE ===
# Set to 'true' to bypass subscription checks and enable self-hosted mode
# For personal/self-hosted deployments only
NEXT_PUBLIC_SELF_HOSTED=true

# === APPLICATION CONFIGURATION ===
NEXT_PUBLIC_APP_URL=http://localhost:3000
PUBLIC_URL=http://localhost:3000

# Default timezone for users (IANA timezone format)
DEFAULT_TIMEZONE=UTC

# Default call time for automated calls (HH:MM:SS format)
DEFAULT_CALL_TIME=21:00:00

# Time window in minutes for call scheduling
CALL_TIME_WINDOW_MINUTES=5

# === SUPABASE CONFIGURATION ===
# Get these from your Supabase project: Settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# === CALL PROVIDER CONFIGURATION ===
# Choose your call provider: 'callkaro' or 'vapi'
CALL_PROVIDER=callkaro

# CallKaro configuration (if using CallKaro)
CALLKARO_API_KEY=your-callkaro-api-key
CALLKARO_BASE_URL=https://api.callkaro.ai
CALLKARO_AGENT_ID=your-agent-id
CALLKARO_WEBHOOK_SECRET=your-webhook-secret

# Vapi configuration (if using Vapi - alternative to CallKaro)
# VAPI_API_KEY=your-vapi-api-key
# VAPI_BASE_URL=https://api.vapi.ai
# VAPI_ASSISTANT_ID=your-assistant-id

# === LLM PROVIDER CONFIGURATION ===
# Choose your LLM provider for avatar chat: 'ollama' (default) or 'openrouter'
LLM_PROVIDER=ollama

# Ollama configuration (default - free, local inference)
# Install Ollama from: https://ollama.ai
# Run: ollama serve (starts API on localhost:11434)
# Pull models: ollama pull llama2 (or mistral, mixtral, etc.)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# OpenRouter configuration (cloud-based, multiple LLMs)
# Get API key from: https://openrouter.ai/keys
# Provides access to Claude, GPT, Gemini, Llama, and more
# OPENROUTER_API_KEY=your-openrouter-api-key
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# === EMBEDDING PROVIDER CONFIGURATION ===
# Choose your embedding provider: 'local' (default), 'openai', or 'huggingface'
# See docs/EMBEDDINGS.md for detailed provider comparison and setup guide
EMBEDDING_PROVIDER=local

# Local provider (default - free, offline-capable, no API key needed)
# Uses @xenova/transformers to run ONNX models on CPU
# Model auto-downloads (~23MB) to ~/.cache/huggingface/ on first use
# LOCAL_EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2  # Default: 384 dimensions
# LOCAL_EMBEDDING_DIMS=384  # Optional: override dimensions
# LOCAL_EMBEDDING_CACHE_DIR=/custom/path  # Optional: custom cache location

# OpenAI provider (recommended for production - high quality, API-based)
# Get API key from: https://platform.openai.com/api-keys
# Cost: $0.02 per 1M tokens for text-embedding-3-small
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=sk-...  # Required for OpenAI provider
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # Default: 1536 dimensions
# OPENAI_EMBEDDING_DIMS=1536  # Optional: 512-1536 for 3-small, up to 3072 for 3-large

# HuggingFace provider (various models available via Inference API)
# Get API key from: https://huggingface.co/settings/tokens
# Free tier: 30K chars/month, Pro: $9/month unlimited
# EMBEDDING_PROVIDER=huggingface
# HUGGINGFACE_API_KEY=hf_...  # Required for HuggingFace provider
# HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2  # Default
# HUGGINGFACE_EMBEDDING_DIMS=384  # Optional: override dimensions

# === REDIS & QUEUE CONFIGURATION ===
# Redis connection for Bull queue system
REDIS_URL=redis://localhost:6379
# For Docker: REDIS_URL=redis://redis:6379

# Queue worker concurrency (number of parallel job processors)
QUEUE_CONCURRENCY=5

# === AVATAR DEFAULTS (OPTIONAL) ===
# Default Ready Player Me avatar and animation style
NEXT_PUBLIC_DEFAULT_AVATAR_URL=https://models.readyplayer.me/66eab6aa7613fa126b7c5a45.glb
NEXT_PUBLIC_DEFAULT_AVATAR_GENDER=feminine

# === PAYMENT CONFIGURATION (HOSTED MODE ONLY) ===
# ⚠️ NOT INCLUDED IN OPEN SOURCE VERSION
# Only needed for hosted/SaaS version - NOT required for self-hosting
# When NEXT_PUBLIC_SELF_HOSTED=true, all payment checks are bypassed
# ENABLE_PAYMENTS=false
# DODOPAYMENTS_SECRET_KEY=your-dodo-secret-key
# DODOPAYMENTS_WEBHOOK_SECRET=your-webhook-secret
# DODOPAYMENTS_PRO_PRODUCT_ID=your-product-id
# DODOPAYMENTS_ENVIRONMENT=test_mode
