FROM node:20-slim

# Install system dependencies required for:
# - Native Node.js modules compilation (python3, make, g++, build-essential)
# - ONNX Runtime native bindings (libgomp1)
# - General compatibility (ca-certificates, git)
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    build-essential \
    libgomp1 \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy all package.json files to set up workspace structure
COPY package*.json ./
COPY web/package*.json ./web/
COPY worker/package*.json ./worker/
COPY packages/shared/package*.json ./packages/shared/

# Install all workspace dependencies
# The --verbose flag helps debug any native binding issues
RUN npm ci --verbose

# Copy tsconfig files
COPY tsconfig.json ./
COPY web/tsconfig.json ./web/
COPY packages/shared/tsconfig.json ./packages/shared/

# Copy next.config.js for Next.js
COPY web/next.config.js ./web/

# Expose Next.js dev server port
EXPOSE 3000

# Start Next.js in development mode with hot reloading
CMD ["npm", "run", "dev"]
