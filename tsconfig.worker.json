{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["es2022"],
    "jsx": "react",
    "incremental": false,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "worker.ts",
    "lib/queue/**/*",
    "lib/services/**/*",
    "lib/auth/**/*"
  ],
  "exclude": [
    "node_modules",
    "app/**/*",
    "components/**/*",
    ".next/**/*",
    "dist/**/*",
    "lib/sound.ts",
    "lib/speech.ts",
    "lib/lipsync.ts"
  ]
}
